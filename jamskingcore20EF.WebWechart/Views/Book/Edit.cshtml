@model Sys.Framework.Model.Sys.T_Sys_User
@{
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}
@section scripts{
    <script type="text/javascript">
        function onSave() {
            console.log("开始执行保存...");
            var data = $('#myForm').serialize();
            $.post('/UserCenter/Edit', data, function (result) {
                return $lsy.callbackDialog(result, false);
            })
        }
    </script>
}
<form id="myForm" class="form-horizontal" role="form">
    <input type="hidden" name="F_Id" value="@Model.F_Id" />
    <input type="hidden" name="F_CreateTime" value="@Model.F_CreateTime" />
    <input type="hidden" name="F_IsDelete" value="@Model.F_IsDelete" />
    <input type="hidden" name="F_Password" value="@Model.F_Password" />
    <div class="form-group">
        <label class="col-sm-2 control-label">用户名</label>
        <div class="col-sm-6">
            <input type="text" name="F_Account" class="form-control" placeholder="用户名" value="@Model.F_Account">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">角色名称</label>
        <div class="col-sm-6">
            <select class="form-control" name="F_RoleId">
                <option value="1">管理员</option>
                <option value="2">普通用户</option>
            </select>
        </div>
    </div>
</form>
